<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/perpustakaan_id"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteX="43dp"
    tools:layout_editor_absoluteY="35dp"
    android:clickable="true"
    android:layout_marginBottom="10dp"
    android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView

                android:id="@+id/gambar_buku"
                android:layout_width="48dp"
                android:layout_height="68dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ipa1"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/judul_buku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biologi dan fisikawan"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/kelas_buku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KELAS X"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/penerbit_buku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penerbit Erlangga"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"/>
            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>